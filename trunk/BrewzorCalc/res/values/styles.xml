<resources>
	
	<!-- Styles -->
	
	<style name="label_text">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textSize">14sp</item>
		<item name="android:padding">5dp</item>
		<item name="android:layout_gravity">center_vertical</item>
		<item name="android:maxLines">2</item>
	</style>

	<style name="small_result" parent="@style/label_text">
		<item name="android:textSize">20sp</item>
		<item name="android:gravity">center</item>		
		<item name="android:layout_gravity">center</item>
		<item name="android:maxLines">6</item>
	</style>

	<style name="large_result" parent="@style/label_text">
		<item name="android:textSize">60sp</item>
		<item name="android:gravity">center</item>		
		<item name="android:layout_gravity">center</item>
	</style>

	<style name="number_entry">
		<item name="android:minWidth">70dp</item> 
		<item name="android:maxWidth">70dp</item> 
		<item name="android:padding">5dp</item>
		<item name="android:selectAllOnFocus">true</item>
		<item name="android:inputType">number</item>
		<item name="android:lines">1</item>
 		<item name="android:gravity">center_vertical|right</item>
		<item name="android:layout_gravity">center_vertical</item>
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
	</style>
	
	<style name="decimal_entry" parent="@style/number_entry">
		<item name="android:inputType">number|numberDecimal</item>
		<item name="android:numeric">decimal</item>
		<item name="android:hint">@string/double_default</item>
		<item name="android:text">@string/double_default</item>
	</style>
	
	<style name="integer_entry" parent="@style/number_entry">
		<item name="android:inputType">number</item>
		<item name="android:numeric">integer</item> 		
		<item name="android:hint">@string/integer_default</item>
		<item name="android:text">@string/integer_default</item>
	</style>

	<style name="sg_entry" parent="@style/number_entry">
		<item name="android:inputType">number|numberDecimal</item>
		<item name="android:numeric">decimal</item> 		
		<item name="android:hint">@string/sg_default</item>
		<item name="android:text">@string/sg_default</item>
	</style>
	
	<style name="portrait_layout">
		<item name="android:orientation">vertical</item>
		<item name="android:layout_width">fill_parent</item> 
		<item name="android:layout_height">fill_parent</item>
		<item name="android:gravity">center_horizontal</item>
		<item name="android:padding">5dip</item>
	</style>

	<style name="landscape_layout">
		<item name="android:orientation">horizontal</item>
		<item name="android:layout_width">fill_parent</item> 
		<item name="android:layout_height">fill_parent</item>
		<item name="android:gravity">center_vertical</item>
		<item name="android:padding">5dip</item>
	</style>

	<style name="entry_table">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:shrinkColumns">0</item>
		<item name="android:gravity">center_vertical</item>
	</style>
		
	<!-- Styles -->

	<style name="timer_base">
		<item name="android:textSize">12dp</item>
		<item name="android:padding">3dp</item>	
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
	</style>

	<style name="timer_duration_label" parent="@style/timer_base">
		<item name="android:textStyle">bold</item>
	</style>

	<style name="timer_list_item" parent="@style/timer_base">
	</style>

	<style name="timer_header_label" parent="@style/timer_base">
		<item name="android:padding">0dp</item>	
	</style>

	<style name="timer_decimal_entry">
		<item name="android:paddingLeft">5dp</item>
		<item name="android:minWidth">70dp</item> 
		<item name="android:maxWidth">70dp</item> 
		<item name="android:selectAllOnFocus">true</item>
		<item name="android:inputType">number|numberDecimal</item>
		<item name="android:numeric">decimal</item>
		<item name="android:lines">1</item>
 		<item name="android:gravity">center_vertical</item>

	</style>
	
	<style name="timer_duration_entry">
		<item name="android:paddingLeft">5dp</item>
		<item name="android:minWidth">70dp</item> 
		<item name="android:maxWidth">70dp</item> 
		<item name="android:selectAllOnFocus">true</item>
		<item name="android:inputType">number</item>
		<item name="android:lines">1</item>
 		<item name="android:gravity">center_vertical</item>

	</style>
	
	<style name="timer_name_entry">
		<item name="android:paddingLeft">5dp</item>
		<item name="android:selectAllOnFocus">true</item>
		<item name="android:lines">1</item>
 		<item name="android:gravity">center_vertical</item>
	</style>
	
	<style name="timer_main" parent="@style/timer_base">
		<item name="android:textSize">60sp</item>
		<item name="android:gravity">center</item>		
		<item name="android:layout_gravity">center</item>		
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">fill_parent</item>
	</style>

</resources>