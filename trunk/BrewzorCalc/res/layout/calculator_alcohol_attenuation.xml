<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
 	          android:orientation="vertical"
			  android:layout_width="fill_parent" 
			  android:layout_height="fill_parent"
			  android:gravity="center_horizontal">
	
	    <TextView android:id="@+id/calculatorName"
	              android:text="@string/alcohol_attenuation"
	              android:layout_width="fill_parent"
	              android:layout_height="wrap_content"
				  style="@style/calculatorNameStyle" />

		<LinearLayout android:orientation="horizontal"
					  android:layout_width="fill_parent" 
					  android:layout_height="wrap_content"			  
					  android:gravity="center_horizontal" >

				<TextView style="@style/converterSmallTextStyle" 
				android:text="@string/alcohol_attenuation_units" />

				<Spinner 	android:id="@+id/unitTypeSpinner"
							android:layout_width="fill_parent"
							android:layout_height="wrap_content"
							android:entries="@array/gravityUnitsList"
							android:entryValues="@array/gravityUnitsIdList"
							android:drawSelectorOnTop="true" />				  
			
		</LinearLayout>

		<TableLayout android:layout_width="wrap_content" android:layout_height="wrap_content">

			<TableRow>
	
				<TextView style="@style/converterSmallTextStyle" android:text="@string/alcohol_attenuation_original_gravity" />
	
				<EditText android:id="@+id/originalEntry" style="@style/doubleUnitEntryStyle" />
	
				<TextView android:id="@+id/originalUnitType" style="@style/converterSmallTextStyle" />
	
			</TableRow>

			<TableRow>
	
				<TextView style="@style/converterSmallTextStyle" android:text="@string/alcohol_attenuation_current_gravity" />
	
				<EditText android:id="@+id/currentEntry" style="@style/doubleUnitEntryStyle" />
	
				<TextView android:id="@+id/currentUnitType" style="@style/converterSmallTextStyle" />
	
			</TableRow>

		</TableLayout>			  

		<TableLayout android:layout_width="wrap_content" android:layout_height="fill_parent" android:gravity="center">

			<TableRow>
	
				<TextView style="@style/converterSmallTextStyle" android:text="@string/alcohol_attenuation_abv" />
	
				<TextView android:id="@+id/abv" android:gravity="right" style="@style/converterSmallTextStyle" />
		
			</TableRow>

			<TableRow>
	
				<TextView style="@style/converterSmallTextStyle" android:text="@string/alcohol_attenuation_abw" />
	
				<TextView android:id="@+id/abw" android:gravity="right" style="@style/converterSmallTextStyle" />
		
			</TableRow>

			<TableRow>
	
				<TextView style="@style/converterSmallTextStyle" android:text="@string/alcohol_attenuation_apparent_attenuation" />
	
				<TextView android:id="@+id/aa" android:gravity="right" style="@style/converterSmallTextStyle" />
		
			</TableRow>

			<TableRow>
	
				<TextView style="@style/converterSmallTextStyle" android:text="@string/alcohol_attenuation_real_attenuation" />
	
				<TextView android:id="@+id/ra" android:gravity="right" style="@style/converterSmallTextStyle" />
		
			</TableRow>
<!-- 
			<TableRow>
	
				<TextView style="@style/converterSmallTextStyle" android:text="@string/alcohol_attenuation_calories" />
	
				<TextView android:id="@+id/calories" android:gravity="right" style="@style/converterSmallTextStyle" />
		
			</TableRow>
 -->
		</TableLayout>
	
</LinearLayout>