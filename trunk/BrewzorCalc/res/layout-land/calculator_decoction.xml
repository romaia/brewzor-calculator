<LinearLayout 	xmlns:android="http://schemas.android.com/apk/res/android"
				style="@style/landscape_layout"
				>
	
		<TableLayout 	style="@style/entry_table"
						android:layout_width="0px"
						android:layout_weight="1"
						android:layout_gravity="center_vertical"
						>

			<TableRow>

				<TextView	style="@style/label_text"
							android:layout_gravity="center_vertical"
							android:text="@string/mash_infusion_current_mash_temperature" 
							/>

				<EditText 	android:id="@+id/currentMashTemperatureEntry" 
							android:layout_gravity="center_vertical"
							style="@style/decimal_entry" 
							/>

				<TextView 	android:id="@+id/currentMashTemperatureUnitType"
							android:layout_gravity="center_vertical"
							style="@style/label_text" 
							/>

			</TableRow>

			<TableRow>

				<TextView	style="@style/label_text"
							android:layout_gravity="center_vertical"
							android:text="@string/mash_infusion_grain_weight"
							 />

				<EditText	android:id="@+id/grainWeightEntry" 
							android:layout_gravity="center_vertical"
							style="@style/decimal_entry" 
							/>

				<TextView	android:id="@+id/grainWeightUnitType"
							android:layout_gravity="center_vertical"
							style="@style/label_text" 
							/>

			</TableRow>

			<TableRow>

				<TextView	style="@style/label_text"
							android:layout_gravity="center_vertical"
							android:text="@string/mash_infusion_water_in_mash_volume" 
							/>

				<EditText 	android:id="@+id/waterInMashVolumeEntry" 
							android:layout_gravity="center_vertical"
							style="@style/decimal_entry" 
							/>

				<TextView 	android:id="@+id/waterInMashVolumeUnitType" 
							android:layout_gravity="center_vertical"
							style="@style/label_text" 
							/>

			</TableRow>

			<TableRow>

				<TextView 	style="@style/label_text"
							android:layout_gravity="center_vertical"
							android:text="@string/mash_infusion_target_mash_temperature" 
							/>

				<EditText 	android:id="@+id/targetMashTemperatureEntry" 
							android:layout_gravity="center_vertical"
							style="@style/decimal_entry" 
							/>

				<TextView 	android:id="@+id/targetMashTemperatureUnitType"
							android:layout_gravity="center_vertical"
							style="@style/label_text" 
							/>

			</TableRow>

		</TableLayout>

	<LinearLayout 	android:orientation="vertical" 
					android:id="@+id/tester"
					android:layout_width="0px" 
					android:layout_height="fill_parent"
					android:layout_weight="1" 
					android:gravity="center"
					>


		<TextView 	android:id="@+id/calculatedInfusionVolume"
					android:text="@string/mash_infusion_calculated_infusion_temperature_default" 
					style="@style/large_result" 
					/>

		<TextView 	android:id="@+id/calculatedInfusionVolumeUnitType"
					style="@style/small_result" 
					/>

	</LinearLayout>
	
</LinearLayout>