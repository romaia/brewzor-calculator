<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:gravity="center_horizontal">

	<TextView android:id="@+id/calculatorName" android:text="@string/boil_off"
		style="@style/calculatorNameStyle" />

	<LinearLayout android:orientation="horizontal"
		android:layout_width="fill_parent" android:layout_height="fill_parent"
		android:gravity="center_horizontal">

		<TableLayout android:layout_width="wrap_content"
			android:layout_height="wrap_content">

			<TableRow>

				<TextView style="@style/converterSmallTextStyle"
					android:text="@string/starting_volume" />

				<EditText android:id="@+id/startingVolumeEntry" style="@style/doubleUnitEntryStyle" />

				<TextView android:id="@+id/startingVolumeUnitType" style="@style/converterSmallTextStyle" />

			</TableRow>

			<TableRow>

				<TextView style="@style/converterSmallTextStyle"
					android:text="@string/evaporation_rate" />

				<EditText android:id="@+id/evaporationRateEntry" style="@style/integerUnitEntryStyle" />

				<TextView android:text="%" style="@style/converterSmallTextStyle" />

			</TableRow>

			<TableRow>

				<TextView style="@style/converterSmallTextStyle"
					android:text="@string/boil_time" />

				<EditText android:id="@+id/boilTimeEntry" style="@style/integerUnitEntryStyle" />

			</TableRow>

			<TableRow>

				<TextView style="@style/converterSmallTextStyle"
					android:text="@string/cooling_loss_percentage" />

				<EditText android:id="@+id/coolingLossPercentageEntry"
					style="@style/integerUnitEntryStyle" />

				<TextView android:text="%" style="@style/converterSmallTextStyle" />

			</TableRow>
		</TableLayout>
		<TableLayout android:layout_width="wrap_content"
			android:layout_height="wrap_content">

			<TableRow>

				<TextView style="@style/converterSmallTextStyle"
					android:text="@string/volume_boiled_off" />

				<TextView android:id="@+id/calculatedVolumeBoiledOff"
					style="@style/converterNumberTextStyle" android:text="0.00" />

				<TextView android:id="@+id/calculatedVolumeBoiledOffUnitType"
					style="@style/converterSmallTextStyle" />

			</TableRow>

			<TableRow>

				<TextView style="@style/converterSmallTextStyle"
					android:text="@string/cooling_loss_volume" />

				<TextView android:id="@+id/calculatedCoolingLossVolume"
					style="@style/converterNumberTextStyle" android:text="0.00" />

				<TextView android:id="@+id/calculatedCoolingLossVolumeUnitType"
					style="@style/converterSmallTextStyle" />

			</TableRow>

			<TableRow>

				<TextView style="@style/converterSmallTextStyle"
					android:text="@string/final_volume" />

				<TextView android:id="@+id/calculatedFinalVolume" style="@style/converterNumberTextStyle"
					android:text="0.00" />

				<TextView android:id="@+id/calculatedFinalVolumeUnitType"
					style="@style/converterSmallTextStyle" />

			</TableRow>

		</TableLayout>
	</LinearLayout>
</LinearLayout>

