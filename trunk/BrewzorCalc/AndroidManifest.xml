			android:windowSoftInputMode="adjustPan"></activity>

 		<activity android:name="com.brewzor.calculator.GravityCorrectionCalculatorActivity" 
			android:windowSoftInputMode="adjustPan"></activity>

		<activity android:name="com.brewzor.calculator.CylinderVolumeCalculatorActivity" 
			android:windowSoftInputMode="adjustPan"></activity>
		
		<activity android:name="com.brewzor.calculator.CylinderHeightCalculatorActivity" 
			android:windowSoftInputMode="adjustPan"></activity>
		
		<activity android:name="com.brewzor.calculator.StrikeTemperatureCalculatorActivity" 
			android:windowSoftInputMode="adjustPan"></activity>
		
		<activity android:name="com.brewzor.calculator.MashInfusionCalculatorActivity" 
			android:windowSoftInputMode="adjustPan"></activity>
		
		<activity android:name="com.brewzor.calculator.DecoctionCalculatorActivity" 
			android:windowSoftInputMode="adjustPan"></activity>
		
		<activity android:name="com.brewzor.calculator.BatchSpargeCalculatorActivity" 
			android:windowSoftInputMode="adjustPan"></activity>
		
		<activity android:name="com.brewzor.calculator.BoilOffCalculatorActivity" 
			android:windowSoftInputMode="adjustPan"></activity>
		
		<activity android:name="com.brewzor.calculator.CarbonationCalculatorActivity" 
			android:windowSoftInputMode="adjustPan"></activity>
		
		<activity android:name="com.brewzor.calculator.AlcoholAttenuationCalculatorActivity" 
			android:windowSoftInputMode="adjustPan"></activity>
		
		<activity android:name="com.brewzor.calculator.RefractometerCalculatorActivity" 
			android:windowSoftInputMode="adjustPan"></activity>
		
		<activity android:name="com.brewzor.calculator.HydrometerCorrectionCalculatorActivity" 
			android:windowSoftInputMode="adjustPan"></activity>
		
		<activity android:name="com.brewzor.calculator.UnitConverterActivity" 
			android:windowSoftInputMode="adjustPan"></activity>

		<activity android:name="com.brewzor.calculator.BrewzorPreferencesActivity" 
			android:label="@string/set_preferences"></activity>
		<activity android:name="com.brewzor.calculator.AboutActivity"></activity>
		<activity android:name="com.brewzor.calculator.HelpActivity"></activity>
	</application>

