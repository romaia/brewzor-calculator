<manifest xmlns:android="http://schemas.android.com/apk/res/android" 
	package="com.brewzor.calculator" android:versionCode="10" android:versionName="1.3.2.1b">
	
	<uses-sdk android:minSdkVersion="3" android:targetSdkVersion="4" />

	<supports-screens android:smallScreens="true" 
                  android:normalScreens="true" 
                  android:largeScreens="true"
                  android:anyDensity="true" />

	<application android:icon="@drawable/icon" android:label="@string/app_name">
		
		<activity android:name="com.brewzor.calculator.BrewzorActivity" android:label="@string/app_name" >
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>

 		<activity android:name="com.brewzor.recipemanager.CreateRecipeActivity" 
			android:windowSoftInputMode="adjustPan"></activity>

 		<activity android:name="com.brewzor.recipemanager.FermentablesListActivity" 
			android:windowSoftInputMode="adjustPan"></activity>

 		<activity android:name="com.brewzor.recipemanager.FermentableActivity" 
			android:windowSoftInputMode="adjustPan"></activity>

 		<activity android:name="com.brewzor.recipemanager.MashProfilesListActivity" 
			android:windowSoftInputMode="adjustPan"></activity>

 		<activity android:name="com.brewzor.recipemanager.MashProfileActivity" 
			android:windowSoftInputMode="adjustPan"></activity>
<!-- 
  		<activity android:name="com.brewzor.recipemanager.NonfermentablesListActivity" 
			android:windowSoftInputMode="adjustPan"></activity>

 		<activity android:name="com.brewzor.recipemanager.NonfermentableActivity" 
			android:windowSoftInputMode="adjustPan"></activity>
-->
